{
  "name": "@saithodev/cli-base",
  "description": "Base for a CLI-based NPM package",
  "version": "2.0.2",
  "author": "Mario Lubenka",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "keywords": [
    "cli",
    "commands"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saitho/node-cli-base"
  },
  "scripts": {
    "build": "tsc",
    "docs:build": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/ && touch ./docs/.nojekyll",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "dependencies": {
    "minimist": "^1.2.5",
    "minimist-options": "^4.1.0",
    "read-pkg-up": "^7.0.1",
    "yargs-parser": "^18.1.3"
  },
  "devDependencies": {
    "@saithodev/semantic-release-sharedconf-npm": "^2.1.0",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.27",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "jest": "^26.1.0",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.4",
    "ts-mockito": "^2.6.1",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
