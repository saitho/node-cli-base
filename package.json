{
  "name": "@saithodev/cli-base",
  "description": "Base for a CLI-based NPM package",
  "version": "2.1.1",
  "author": "Mario Lubenka",
  "license": "MIT",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cli",
    "commands"
  ],
  "repository": {
    "type": "git",
    "url": "github:saitho/node-cli-base"
  },
  "scripts": {
    "build": "tsc",
    "docs:build": "typedoc --out ./docs --tsconfig ./tsconfig.json ./src/ && touch ./docs/.nojekyll",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "minimist-options": "^4.1.0",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@saithodev/semantic-release-sharedconf-npm": "^2.2.1",
    "@types/jest": "^26.0.15",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.0",
    "@types/yargs-parser": "^21.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^26.6.3",
    "semantic-release": "^22.0.8",
    "ts-jest": "^26.4.4",
    "ts-mockito": "^2.6.1",
    "typedoc": "^0.25.3",
    "typescript": "^5.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
